
/* Text
-------------------------------------------------------------- */
html, div#content {
    background-color: #F0F0F0;
}

body {
    font-family: "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;
    font-size: 9pt;
    text-align: justify;
    line-height: 120%;

    /* Center the page */
    margin: auto auto;
}

div.main_column, div#postamble {
    color: #2e2e2e;
    background-color: white;
}

div#postamble {
    text-align: right;
    font-size: 8pt;
    line-height:0.2em;
}

div#postamble-extra {
    font-size: 8pt;
}

pre {
    border: 1px solid #555;
    background: #EEEEEE;
    font-size: 9pt;
    padding: 1em;
    overflow: hidden;
}

pre.src {
    font-family: Monaco, "DejaVu Sans Mono", Courier, monospace;
    font-size: 8pt;
    background-color: #282828;
    color: #FFFFCC;
    line-height: 1.2
}

code {
    font-family: Monaco, "DejaVu Sans Mono", Courier, monospace;
    font-size: 9pt;
}

a { 
    text-decoration: none; 
    color: #4a708b; 
    font-weight: normal; 
}

a:hover { 
    text-decoration: underline; 
}

sup { 
    line-height: 1px; 
}

p { 
    padding-bottom: 0.5em; 
    padding-top: 0.5em; 
}


/* Titles and Headings
-------------------------------------------------------------- */
h1 { 
    font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 18pt; 
    color: #660033;
    font-weight: normal;

    padding-top: 25px;
    padding-right: 0px;
    padding-left: 0px;
    padding-bottom: 10px;
}

*.title {
    color: white;
    text-align: center;
    font-family: "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;
    font-size: 25pt;
    font-weight: lighter;

    border: 1px solid #000000;

    background-color: white;
    background-image:url('./img/banner.gif');
    background-repeat:no-repeat;
    background-position:left bottom;
}

h2, h2 a:link, h2 a:active { 
    font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 12pt;
    color: #191970; /* MidnightBlue */
    font-weight: normal;
    text-decoration: none;

    padding-top: 2px;
    padding-right: 0px;
    padding-left: 0px;
    padding-bottom: 2px;

    margin-top: 30px;
    margin-bottom: 10px;
    border-bottom: 1px solid #bababa;
}

/* Change the heading in the table of contents */
/*   (CSS is amazing) */
#table-of-contents > h2 {
    margin-top: 0px;
    border-bottom: none;

    font-weight: bold;
    font-family: "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;
}

.outline-text-1, .outline-text-2 {
    /* Make sure that the floats from one section won't run into the next.
       As far as I'm concerned, this is ok for outline levels 3 or 4,
       but not for 1 or 2.  */
    overflow: auto;
}

h2 a:hover {
    color: blue;
    text-decoration: none;
}

h2 a:visited { 
    color: gray;
}

h3 { 
    font-family: "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;
    font-size: 11pt; 
    font-weight: normal;
    color: black; 
    text-decoration: none;
 
    padding-top: 10px;
    padding-right: 0px;
    padding-left: 0px;
    padding-bottom: 2px;

    margin-top: 10px;
    margin-bottom: 2px;
    border-bottom: none;
}

h4 { font-size: 10pt; }

#table-of-contents {
    color: black;
    background: #FFF;
    font-size: 80%;
}



/* Tables and Lists
-------------------------------------------------------------- */
table  { border: 1px solid #bababa; }
th, td { height: 1em; padding: 0.2em 0.4em; border: 1px solid #e8e8e8; }
th     { font-weight: bold; }
table.plain, td.plain { border: none; }

hr {
    /* horizontal line across the page */
    border: 0;
    height: 1px;
    color: #bababa;
    background-color: #bababa;
}

ul, ol { 
    list-style-position: inside; 
    padding-bottom: 1em;
}

li { 
    padding-bottom: 0.5em; 
}


/* Images
-------------------------------------------------------------- */
.pad {
    margin: 1.5em 1.5em 1.5em 1.5em;
    padding: 0;
}

.top {
    margin-top: 0em;
}

.bottom {
    margin-bottom: 0em;
}

.right {
    margin-right: 0em;
    float: right;
}

.left {
    margin-left: 0em;
    float: left;
}

*.xhtml-validation {
    margin-left: 0em;
    margin-right: 1.5em;
    float: left;
    margin-bottom: -30px;
    /* vertical-align: text-bottom; */
    position: relative;
    bottom: 33px;
}

*.css-validation {
    margin-left: 0em;
    margin-right: 1.5em;
    float: left;
    margin-bottom: -30px;
    /* vertical-align: text-bottom; */
    position: relative;
    bottom: 33px;
}


/* Navigation bar
-------------------------------------------------------------- */
#navigation a, a:hover, a:active, a:visited {
    text-decoration: none;
}

#navigation a {
    color: inherit;
    font-weight: inherit;

    /* Make the link fill the whole li, not just the text */
    margin: 0px; 
    display: block; 
    width: 100%; 
    height: 100%;
}

#navigation ul {
    padding: 0;
    margin: 0;
}

#navigation li  {
    margin: 0px;

    padding-left: 1em;

    padding-top: 5px;
    padding-bottom: 5px;

    border-top: 1px solid #333333;
    border-left: 1px solid #333333;

    list-style: none;

    background-color: #FFFFFF;
}

#navigation li.sub {
    background-color: #EEEEEE;
    padding-left: 2em;
}

#navigation ul li.last {
    border-bottom: 1px solid #333333;
}

#navigation li.home, a.home {
    background-color: #003366;
    color: white;
    font-weight: bold;
}

#navigation li.active {
    background-color: #6699CC;
    color: white;
    font-weight: bold;
}

#navigation li:hover {
    background-color: #ababab;
}

#navigation li.home:hover {
    background-color: #555555;
}

#navigation li.active:hover {
    background-color: #777777;
}



